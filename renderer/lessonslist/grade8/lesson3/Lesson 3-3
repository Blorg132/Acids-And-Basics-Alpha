                    // Checking answers when user submits with the button
                    document.getElementById("lessonform1").addEventListener("submit", async function(event) {
                        event.preventDefault(); // this prevents the form from being resubmitted over and over while this code is running
                        let totalscore = 0; // please pass this variable into the function lessonGiveBeakers to add the proper amount


                        // QUESTION 1: 
                        let question1 = document.querySelector('input[name="question1"]:checked');
                        if (question1 && question1.value === "correct") {
                            totalscore += 2;
                        }

                        // QUESTION 2: 
                        let question2 = document.querySelector('input[name="question2"]:checked');
                        if (question2 && question2.value === "correct") {
                            totalscore += 2;
                        }

                        // QUESTION 3: 
                        let question3 = document.querySelector('input[name="question3"]:checked');
                        if (question3 && question3.value === "correct") {
                            totalscore += 2;
                        }

                        // QUESTION 4: 
                        let question4 = document.querySelector('input[name="question4"]:checked');
                        if (question4 && question4.value === "correct") {
                            totalscore += 3;
                        }

                        // QUESTION 5: 
                        let question5 = document.querySelector('input[name="question5"]:checked');
                        if (question5 && question5.value === "correct") {
                            totalscore += 4;
                        }

                        // QUESTION 6: 
                        let question6 = document.querySelector('input[name="question6"]:checked');
                        if (question6 && question6.value === "correct") {
                            totalscore += 3;
                        }

                        // QUESTION 7: 
